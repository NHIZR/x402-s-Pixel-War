# ===========================================
# Pixel War - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# -----------------
# Supabase Configuration
# -----------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# -----------------
# Solana Configuration
# -----------------
# Network: devnet | mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC endpoint (recommend Helius for production)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Helius API Key (optional, for better RPC performance)
HELIUS_API_KEY=your-helius-api-key

# -----------------
# Token Configuration
# -----------------
# USDC Token Mint Address (use your custom SPL token for devnet)
NEXT_PUBLIC_USDC_MINT_ADDRESS=your-usdc-mint-address

# -----------------
# Wallet Configuration
# -----------------
# Treasury Wallet (receives game revenue / war tax)
NEXT_PUBLIC_GAME_TREASURY_WALLET=your-treasury-wallet-public-key
TREASURY_WALLET_PRIVATE_KEY=your-treasury-wallet-private-key

# Faucet Wallet (distributes test tokens on devnet)
FAUCET_WALLET_PRIVATE_KEY=your-faucet-wallet-private-key

# -----------------
# Application Configuration
# -----------------
# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
